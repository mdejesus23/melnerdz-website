---
import { footerLinks, navLinks } from '@/data/navLinks';
import LinkedIn from './ui/icons/LinkedIn.astro';
---

<footer class="bg-bg-secondary/30 relative border-t border-border">
  <div class="mx-auto max-w-6xl px-6 py-12 lg:px-8 xl:px-0">
    <div class="grid gap-8 md:grid-cols-3 md:gap-12">
      <!-- Brand section -->
      <div class="md:col-span-1">
        <a href="/" class="inline-block font-logofont text-2xl font-bold">
          <span class="text-white">Nerdz</span><span class="text-accent">.</span
          >
        </a>
        <p class="mt-4 max-w-xs text-sm leading-relaxed text-text-muted">
          Full-Stack Web Developer focused on creating clean, fast, and scalable
          web solutions.
        </p>

        <!-- Social links -->
        <div class="mt-6 flex gap-3">
          {
            footerLinks.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-bg-secondary/50 hover:border-accent/50 flex h-10 w-10 items-center justify-center rounded-full border border-border text-text-muted transition-all duration-300 hover:text-accent"
                aria-label={link.title}
              >
                {link.title === 'Github' && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                )}
                {link.title === 'Facebook' && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                  </svg>
                )}
                {link.title === 'RSS' && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z" />
                  </svg>
                )}
                {link.title === 'linkedin' && <LinkedIn />}
              </a>
            ))
          }
        </div>
      </div>

      <!-- Quick links -->
      <div>
        <h3
          class="mb-4 text-sm font-semibold uppercase tracking-wider text-white"
        >
          Quick Links
        </h3>
        <ul class="space-y-3">
          {
            navLinks.slice(0, 5).map((link) => (
              <li>
                <a
                  href={link.url}
                  class="text-sm text-text-muted transition-colors hover:text-accent"
                >
                  {link.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact info -->
      <div>
        <h3
          class="mb-4 text-sm font-semibold uppercase tracking-wider text-white"
        >
          Get in Touch
        </h3>
        <ul class="space-y-3 text-sm text-text-muted">
          <li class="flex items-center gap-2">
            <svg
              class="h-4 w-4 text-accent"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a href="/contact" class="transition-colors hover:text-accent"
              >Contact Form</a
            >
          </li>
          <li class="flex items-center gap-2">
            <svg
              class="h-4 w-4 text-accent"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>Philippines</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div
      class="mt-12 flex flex-col items-center justify-between gap-4 border-t border-border pt-8 md:flex-row"
    >
      <p class="text-sm text-text-muted">
        &copy; <span id="copyright"></span>
        <span class="text-white">melnerdz.com</span>. All rights reserved.
      </p>
      <p class="text-xs text-text-muted">
        Built with
        <svg
          class="mx-1 inline-block h-4 w-4 text-red-500"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
          ></path>
        </svg>
        using <a
          href="https://astro.build"
          target="_blank"
          class="text-accent hover:underline">Astro</a
        >
      </p>
    </div>
  </div>
</footer>

<script>
  const copyRight = document.querySelector('#copyright')!;
  copyRight.textContent = new Date().getFullYear().toString();
</script>
