---
interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQ[];
  class?: string;
}

const { faqs, class: className = '' } = Astro.props;
---

{
  faqs.length > 0 && (
    <section class:list={['mt-12 border-t border-border pt-8', className]}>
      <h2 class="mb-6 font-headfont text-2xl font-bold text-white">
        Frequently Asked Questions
      </h2>
      <div class="space-y-3">
        {faqs.map((faq, index) => (
          <details class="bg-bg-card/50 hover:border-accent/30 group rounded-xl border border-border backdrop-blur-sm transition-all duration-200">
            <summary class="flex cursor-pointer list-none items-center justify-between gap-4 p-4 font-medium text-white [&::-webkit-details-marker]:hidden">
              <span class="text-base md:text-lg">{faq.question}</span>
              <span class="shrink-0 text-accent transition-transform duration-200 group-open:rotate-180">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="m6 9 6 6 6-6" />
                </svg>
              </span>
            </summary>
            <div class="px-4 pb-4 pt-0 leading-relaxed text-text-muted">
              <p>{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>
    </section>
  )
}
