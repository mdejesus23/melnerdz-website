---
import { ClientRouter } from 'astro:transitions';
import Meta from './Meta.astro';

// component imports
// import Seo from './Seo.astro';

interface Props {
  title?: string;
  meta?: string;
  structuredData?: object;
  liturgy?: boolean;
}

const {
  title = 'Melnerdz Website',
  meta,
  structuredData,
  liturgy,
} = Astro.props;
---

<head>
  <ClientRouter />
  <meta charset="utf-8" />
  <link rel="apple-touch-icon" sizes="180x180" href="/logoV2.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/logoV2.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/logoV2.png" />
  <link rel="manifest" href="/site.webmanifest" />

  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
  />

  <link rel="sitemap" href="/sitemap-index.xml" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>

  <!-- Adding metadata to the HTML document -->
  <Meta liturgy={liturgy} meta={meta} structuredData={structuredData} />
</head>
