---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const latestBlogs: CollectionEntry<'blogs'>[] = (await getCollection('blogs'))
  .sort(
    (a: CollectionEntry<'blogs'>, b: CollectionEntry<'blogs'>) =>
      b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  )
  .slice(0, 3);

// Format date helper
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  });
};
---

<section class="py-16 md:py-24">
  <!-- Divider -->
  <div class="mb-12 flex items-center gap-4 md:mb-16">
    <div class="h-px flex-1 bg-gradient-to-r from-transparent via-border to-transparent"></div>
    <span class="rounded-full border border-border/50 bg-bg-secondary/30 px-4 py-1.5 text-[10px] font-semibold uppercase tracking-[0.15em] text-text-muted backdrop-blur-sm">Latest Posts</span>
    <div class="h-px flex-1 bg-gradient-to-r from-transparent via-border to-transparent"></div>
  </div>

  <!-- Section header -->
  <div class="mb-10 flex flex-col justify-between gap-4 md:mb-14 md:flex-row md:items-end">
    <div>
      <span class="mb-3 inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.15em] text-accent-foreground">
        <span class="h-px w-8 bg-accent/50"></span>
        Blog
      </span>
      <h2 class="font-headfont text-3xl font-bold leading-tight md:text-4xl lg:text-5xl">
        Recent <span class="gradient-text">Articles</span>
      </h2>
    </div>
    <a
      class="group inline-flex items-center gap-2 rounded-full border border-border/50 bg-bg-secondary/30 px-4 py-2 text-sm font-medium text-text-muted backdrop-blur-sm transition-all duration-300 hover:border-accent/30 hover:text-accent"
      href="/blogs"
    >
      View all posts
      <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>

  <!-- Blog cards grid -->
  <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3 lg:gap-6">
    {
      latestBlogs.map((blog, index) => (
        <article
          class="group relative overflow-hidden rounded-2xl border border-border/50 bg-bg-card/50 backdrop-blur-sm transition-all duration-500 hover:border-accent/30 hover:shadow-lg hover:shadow-accent/5"
          style={`animation-delay: ${index * 100}ms`}
        >
          <a href={`/blogs/${blog.id}`} class="block">
            <!-- Image -->
            <div class="relative aspect-[16/10] overflow-hidden">
              <Image
                class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
                widths={[320, 400, 640]}
                sizes="(min-width: 1024px) 400px, (min-width: 640px) 50vw, 100vw"
                src={blog.data.image.src}
                alt={blog.data.image.alt}
                quality={80}
              />
              <!-- Gradient overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-bg-primary via-bg-primary/30 to-transparent"></div>

              <!-- Date badge -->
              <div class="absolute bottom-3 left-3 flex items-center gap-1.5 rounded-full border border-white/10 bg-bg-primary/70 px-3 py-1.5 text-xs font-medium text-white/90 backdrop-blur-sm">
                <svg class="h-3 w-3 opacity-70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {formatDate(blog.data.pubDate)}
              </div>
            </div>

            <!-- Content -->
            <div class="p-5 md:p-6">
              <h3 class="mb-3 font-headfont text-lg font-bold leading-snug text-white transition-colors line-clamp-2 group-hover:text-accent md:text-xl">
                {blog.data.title}
              </h3>
              <p class="text-sm leading-relaxed text-text-muted line-clamp-2">
                {blog.data.description}
              </p>

              <!-- Read more -->
              <div class="mt-5 inline-flex items-center gap-2 text-sm font-medium text-accent-foreground">
                <span class="relative">
                  Read article
                  <span class="absolute -bottom-0.5 left-0 h-px w-0 bg-accent transition-all duration-300 group-hover:w-full"></span>
                </span>
                <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </div>
            </div>
          </a>
        </article>
      ))
    }
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
