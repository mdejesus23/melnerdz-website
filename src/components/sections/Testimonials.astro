---
import { testimonials, TESTIMONIALS_PROFILE_URL } from '../../data/testimonials';
---

<section class="py-16 md:py-24">
  <!-- Divider -->
  <div class="mb-12 flex items-center gap-4 md:mb-16">
    <div class="h-px flex-1 bg-gradient-to-r from-transparent via-border to-transparent"></div>
    <span class="rounded-full border border-border/50 bg-bg-secondary/30 px-4 py-1.5 text-[10px] font-semibold uppercase tracking-[0.15em] text-text-muted backdrop-blur-sm">Client Feedback</span>
    <div class="h-px flex-1 bg-gradient-to-r from-transparent via-border to-transparent"></div>
  </div>

  <!-- Section header -->
  <div class="mb-10 flex flex-col justify-between gap-4 md:mb-14 md:flex-row md:items-end">
    <div>
      <span class="mb-3 inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.15em] text-accent-foreground">
        <span class="h-px w-8 bg-accent/50"></span>
        Testimonials
      </span>
      <h2 class="font-headfont text-3xl font-bold leading-tight md:text-4xl lg:text-5xl">
        What Clients <span class="gradient-text">Say</span>
      </h2>
    </div>
    <a
      class="group inline-flex items-center gap-2 rounded-full border border-border/50 bg-bg-secondary/30 px-4 py-2 text-sm font-medium text-text-muted backdrop-blur-sm transition-all duration-300 hover:border-accent/30 hover:text-accent"
      href="/testimonials"
    >
      View all reviews
      <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>

  <!-- Testimonials grid -->
  <div class="grid gap-5 md:grid-cols-2 lg:grid-cols-3 lg:gap-6">
    {
      testimonials.map((testimonial, index) => (
        <article
          class="group relative overflow-hidden rounded-2xl border border-border/50 bg-bg-card/50 p-6 backdrop-blur-sm transition-all duration-500 hover:border-accent/30 hover:shadow-lg hover:shadow-accent/5 md:p-8"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Quote icon -->
          <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-accent/10">
            <svg class="h-5 w-5 text-accent" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
          </div>

          <!-- Content -->
          <p class="mb-6 text-sm leading-relaxed text-text-muted md:text-base">
            "{testimonial.content}"
          </p>

          <!-- Author -->
          <div class="flex items-center justify-between">
            <div>
              <p class="font-headfont font-semibold text-white">{testimonial.name}</p>
              <p class="text-xs text-text-muted">{testimonial.date}</p>
            </div>
            <!-- Stars -->
            <div class="flex gap-0.5">
              {[...Array(5)].map(() => (
                <svg class="h-4 w-4 text-accent" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
          </div>
        </article>
      ))
    }
  </div>

  <!-- CTA to view real testimonials -->
  <div class="mt-10 text-center">
    <a
      href={TESTIMONIALS_PROFILE_URL}
      target="_blank"
      rel="noopener noreferrer"
      class="group inline-flex items-center gap-2 text-sm font-medium text-text-muted transition-colors hover:text-accent"
    >
      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
      <span class="relative">
        View verified reviews on OnlineJobs.ph
        <span class="absolute -bottom-0.5 left-0 h-px w-0 bg-accent transition-all duration-300 group-hover:w-full"></span>
      </span>
    </a>
  </div>
</section>
