---
import { Image } from 'astro:assets';
import Logo from '../../public/logo.png';
---

<header class="bg-transparent">
  <nav class="max-w-5xl mx-auto">
    <div
      class="flex flex-col justify-between xs:flex-row xs:items-center gap-y-4 py-4 px-3 xl:px-0"
    >
      <div>
        <a
          href="/"
          class="flex flex-row items-end gap-x-1 text-2xl xs:text-3xl font-bold tracking-wide"
          ><Image class="w-8 xs:w-9 sm:w-10" src={Logo} alt="logo icon" /><span
            >elnerdz</span
          ></a
        >
      </div>
      <!-- will display none in 700px -->
      <div>
        <ul class="flex space-x-6 font-medium">
          <li>
            <a href="/about" class="hover:text-lblue">About</a>
          </li>
          <li>
            <a href="/contact" class="hover:text-lblue">Contact</a>
          </li>
          <li>
            <a class="hover:text-lblue" href="/">Github</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
