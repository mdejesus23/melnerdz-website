---
import { Image } from 'astro:assets';
import Logo from '../../public/logo.png';
---

<header class="bg-transparent">
  <nav class="mx-auto max-w-5xl">
    <div
      class="flex flex-col justify-between gap-y-4 px-3 py-4 xs:flex-row xs:items-center xl:px-0"
    >
      <div>
        <a
          href="/"
          class="flex flex-row items-end gap-x-1 font-headfont text-2xl font-bold tracking-wide xs:text-3xl"
          ><Image class="w-8 xs:w-9 sm:w-10" src={Logo} alt="logo icon" /><span
            >elnerdz</span
          ></a
        >
      </div>
      <!-- will display none in 700px -->
      <div>
        <ul class="flex space-x-6 font-medium">
          <li>
            <a href="/projects" class="hover:text-lblue">Projects</a>
          </li>
          <li>
            <a href="/contact" class="hover:text-lblue">Contact</a>
          </li>
          <li>
            <a
              class="hover:text-lblue"
              href="https://github.com/mdejesus23"
              target="_blank">Github</a
            >
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
