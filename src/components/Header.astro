---
import { Image } from 'astro:assets';
import { navLinks } from '@/data/navLinks';
import NavLink from './ui/NavLink.astro';
import MenuOpen from './ui/icons/MenuOpen.astro';
import ThemeToggle from './ui/ThemeToggle.astro';

// images
import LogoImageForDark from '@/images/nerdz-dark.png';
import LogoImageForLight from '@/images/nerdz-light.png';
---

<header
  id="main-header"
  class="fixed left-0 right-0 top-0 z-50 transition-all duration-300"
>
  <div
    class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4 lg:px-8 xl:px-0"
  >
    <!-- Logo -->
    <a href="/" class="relative z-10">
      <Image
        src={LogoImageForLight}
        width={150}
        alt="Nerdz Logo"
        class="h-12 w-auto dark:hidden md:h-16"
        loading="eager"
      />
      <Image
        src={LogoImageForDark}
        alt="Nerdz Logo"
        width={150}
        class="hidden h-12 w-auto dark:block md:h-16"
        loading="eager"
      />
    </a>

    <!-- Desktop navigation -->
    <nav class="hidden items-center gap-1 sm:flex">
      {
        navLinks.map((link) => (
          <NavLink
            title={link.title}
            url={link.url}
            currentPath={Astro.url.pathname}
          />
        ))
      }
      <!-- Bookmarks button -->
      <button
        id="bookmarks-toggle"
        class="bg-bg-secondary/50 hover:border-accent/50 relative ml-1 flex h-10 w-10 items-center justify-center rounded-full border border-border text-text-muted transition-colors hover:text-accent"
        aria-label="View bookmarks"
        aria-expanded="false"
      >
        <svg
          class="h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
        </svg>
        <span
          id="bookmarks-count"
          class="absolute -right-1 -top-1 hidden h-4 w-4 items-center justify-center rounded-full bg-accent text-[10px] font-bold text-black"
        ></span>
      </button>
      <ThemeToggle />
    </nav>

    <!-- Mobile menu button and theme toggle -->
    <div class="flex items-center gap-2 sm:hidden">
      <!-- Mobile bookmarks button -->
      <button
        id="bookmarks-toggle-mobile"
        class="bg-bg-secondary/50 hover:border-accent/50 relative flex h-10 w-10 items-center justify-center rounded-full border border-border text-text-muted transition-colors hover:text-accent"
        aria-label="View bookmarks"
        aria-expanded="false"
      >
        <svg
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
        </svg>
        <span
          id="bookmarks-count-mobile"
          class="absolute -right-1 -top-1 hidden h-4 w-4 items-center justify-center rounded-full bg-accent text-[10px] font-bold text-black"
        ></span>
      </button>
      <ThemeToggle />
      <button
        id="mobile-menu"
        class="bg-bg-secondary/50 hover:border-accent/50 relative z-10 flex h-10 w-10 flex-col items-center justify-center gap-1.5 rounded-full border border-border transition-colors"
        aria-controls="navbar-collapse"
        aria-label="Toggle navigation"
        aria-expanded="false"
      >
        <MenuOpen />
      </button>
    </div>
  </div>

  <!-- Background blur layer (appears on scroll) -->
  <div
    id="header-bg"
    class="bg-bg-primary/0 absolute inset-0 -z-10 border-b border-transparent backdrop-blur-none transition-all duration-300"
  >
  </div>
</header>

<!-- Mobile navigation -->
<nav
  id="navbar-collapse"
  class="bg-bg-primary/95 fixed inset-0 z-40 flex translate-x-full flex-col backdrop-blur-xl transition-transform duration-300 ease-in-out"
>
  <div class="flex flex-1 flex-col items-center justify-center gap-6 p-8">
    {
      navLinks.map((link, index) => (
        <a
          href={link.url}
          class="nav-mobile-link text-2xl font-medium text-white transition-all duration-300 hover:text-accent"
          style={`--delay: ${index * 50}ms`}
        >
          {link.title}
        </a>
      ))
    }
  </div>

  <!-- Social links in mobile menu -->
  <div class="flex justify-center gap-6 border-t border-border p-8">
    <a
      href="https://github.com/mdejesus23"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Visit GitHub profile"
      class="text-text-muted transition-colors hover:text-accent"
    >
      <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
        ></path>
      </svg>
    </a>
    <a
      href="https://www.facebook.com/dejesusmelnard"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Visit Facebook profile"
      class="text-text-muted transition-colors hover:text-accent"
    >
      <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
        <path
          d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
        ></path>
      </svg>
    </a>
  </div>
</nav>

<!-- Bookmarks slide-out panel -->
<div
  id="bookmarks-panel"
  class="z-99 fixed right-0 top-0 z-50 h-full w-full max-w-sm translate-x-full bg-bg-primary backdrop-blur-xl transition-transform duration-300 ease-in-out"
>
  <!-- Panel header -->
  <div class="flex items-center justify-between border-b border-border p-6">
    <div class="flex items-center gap-3">
      <svg class="h-5 w-5 text-accent" fill="currentColor" viewBox="0 0 24 24">
        <path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
      </svg>
      <h2 class="text-text-primary font-headfont text-lg font-bold">
        Bookmarks
      </h2>
    </div>
    <button
      id="bookmarks-close"
      class="hover:border-accent/50 hover:text-text-primary flex h-8 w-8 items-center justify-center rounded-full border border-border text-text-muted transition-colors"
      aria-label="Close bookmarks"
    >
      <svg
        class="h-4 w-4"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <!-- Bookmarks list -->
  <div id="bookmarks-list" class="flex-1 overflow-y-auto p-4">
    <!-- Populated by JavaScript -->
  </div>

  <!-- Empty state -->
  <div
    id="bookmarks-empty"
    class="hidden flex-1 flex-col items-center justify-center p-8 text-center"
  >
    <svg
      class="text-text-muted/30 mb-4 h-16 w-16"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="1"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
    </svg>
    <p class="text-text-muted">No bookmarks yet</p>
    <p class="text-text-muted/70 mt-1 text-sm">Save articles to read later</p>
  </div>
</div>

<!-- Bookmarks overlay -->
<div
  id="bookmarks-overlay"
  class="fixed inset-0 z-40 hidden bg-black/50 backdrop-blur-sm"
>
</div>

<script>
  interface BookmarkItem {
    id: string;
    title: string;
  }

  document.addEventListener('astro:page-load', () => {
    const header = document.getElementById('main-header');
    const headerBg = document.getElementById('header-bg');
    const toggleButton = document.getElementById('mobile-menu');
    const mobileNav = document.getElementById('navbar-collapse');
    const mobileLinks = document.querySelectorAll('.nav-mobile-link');

    // Bookmarks panel elements
    const bookmarksToggle = document.getElementById('bookmarks-toggle');
    const bookmarksToggleMobile = document.getElementById(
      'bookmarks-toggle-mobile',
    );
    const bookmarksPanel = document.getElementById('bookmarks-panel');
    const bookmarksOverlay = document.getElementById('bookmarks-overlay');
    const bookmarksClose = document.getElementById('bookmarks-close');
    const bookmarksList = document.getElementById('bookmarks-list');
    const bookmarksEmpty = document.getElementById('bookmarks-empty');
    const bookmarksCount = document.getElementById('bookmarks-count');
    const bookmarksCountMobile = document.getElementById(
      'bookmarks-count-mobile',
    );

    const STORAGE_KEY = 'melnerdz-bookmarked-articles';

    // Get bookmarks from localStorage
    function getBookmarks(): BookmarkItem[] {
      try {
        const stored = localStorage.getItem(STORAGE_KEY);
        if (!stored) return [];
        const parsed = JSON.parse(stored);
        // Handle legacy format (array of strings)
        if (
          Array.isArray(parsed) &&
          parsed.length > 0 &&
          typeof parsed[0] === 'string'
        ) {
          return parsed.map((id: string) => ({ id, title: id }));
        }
        return parsed;
      } catch {
        return [];
      }
    }

    // Save bookmarks to localStorage
    function saveBookmarks(bookmarks: BookmarkItem[]) {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(bookmarks));
      renderBookmarks();
    }

    // Remove a bookmark
    function removeBookmark(articleId: string) {
      const bookmarks = getBookmarks();
      const filtered = bookmarks.filter((b) => b.id !== articleId);
      saveBookmarks(filtered);
      // Update any bookmark buttons on the page
      const btn = document.querySelector(
        `.bookmark-btn[data-article-id="${articleId}"]`,
      );
      if (btn) {
        btn.classList.remove('bookmarked');
        btn.setAttribute('aria-label', 'Bookmark article');
      }
    }

    // Update bookmark count badge
    function updateCount() {
      const count = getBookmarks().length;
      [bookmarksCount, bookmarksCountMobile].forEach((el) => {
        if (el) {
          if (count > 0) {
            el.textContent = count.toString();
            el.classList.remove('hidden');
            el.classList.add('flex');
          } else {
            el.classList.add('hidden');
            el.classList.remove('flex');
          }
        }
      });
    }

    // Render bookmarks list
    function renderBookmarks() {
      const bookmarks = getBookmarks();
      updateCount();

      if (!bookmarksList || !bookmarksEmpty) return;

      if (bookmarks.length === 0) {
        bookmarksList.classList.add('hidden');
        bookmarksEmpty.classList.remove('hidden');
        bookmarksEmpty.classList.add('flex');
        return;
      }

      bookmarksList.classList.remove('hidden');
      bookmarksEmpty.classList.add('hidden');
      bookmarksEmpty.classList.remove('flex');

      bookmarksList.innerHTML = bookmarks
        .map(
          (bookmark) => `
        <div class="bookmark-item group mb-3 flex items-center gap-3 rounded-xl border border-border bg-bg-secondary/50 p-3 transition-colors hover:border-accent/30">
          <a href="/blogs/${bookmark.id}" class="flex-1 min-w-0">
            <p class="font-medium text-text-primary truncate group-hover:text-accent transition-colors">${bookmark.title}</p>
            <p class="text-xs text-text-muted truncate">/blogs/${bookmark.id}</p>
          </a>
          <button
            class="bookmark-remove flex-shrink-0 p-1.5 text-text-muted transition-colors hover:text-red-400"
            data-id="${bookmark.id}"
            aria-label="Remove bookmark"
          >
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          </button>
        </div>
      `,
        )
        .join('');

      // Add remove handlers
      bookmarksList.querySelectorAll('.bookmark-remove').forEach((btn) => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          const id = (btn as HTMLButtonElement).dataset.id;
          if (id) removeBookmark(id);
        });
      });

      // Close panel when clicking a bookmark link
      bookmarksList.querySelectorAll('.bookmark-item a').forEach((link) => {
        link.addEventListener('click', () => {
          closeBookmarksPanel();
        });
      });
    }

    // Toggle bookmarks panel
    function openBookmarksPanel() {
      if (!bookmarksPanel || !bookmarksOverlay) return;
      renderBookmarks();
      bookmarksPanel.classList.remove('translate-x-full');
      bookmarksOverlay.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      bookmarksToggle?.setAttribute('aria-expanded', 'true');
      bookmarksToggleMobile?.setAttribute('aria-expanded', 'true');
    }

    function closeBookmarksPanel() {
      if (!bookmarksPanel || !bookmarksOverlay) return;
      bookmarksPanel.classList.add('translate-x-full');
      bookmarksOverlay.classList.add('hidden');
      document.body.style.overflow = '';
      bookmarksToggle?.setAttribute('aria-expanded', 'false');
      bookmarksToggleMobile?.setAttribute('aria-expanded', 'false');
    }

    // Event listeners for bookmarks panel
    bookmarksToggle?.addEventListener('click', openBookmarksPanel);
    bookmarksToggleMobile?.addEventListener('click', openBookmarksPanel);
    bookmarksClose?.addEventListener('click', closeBookmarksPanel);
    bookmarksOverlay?.addEventListener('click', closeBookmarksPanel);

    // Listen for bookmark updates from other pages
    window.addEventListener('bookmarks-updated', () => {
      renderBookmarks();
    });

    // Initialize count on load
    updateCount();

    // Scroll effect for header
    const handleScroll = () => {
      if (!header || !headerBg) return;

      if (window.scrollY > 50) {
        headerBg.classList.remove(
          'bg-bg-primary/0',
          'backdrop-blur-none',
          'border-transparent',
        );
        headerBg.classList.add(
          'bg-bg-primary/80',
          'backdrop-blur-xl',
          'border-border',
        );
      } else {
        headerBg.classList.add(
          'bg-bg-primary/0',
          'backdrop-blur-none',
          'border-transparent',
        );
        headerBg.classList.remove(
          'bg-bg-primary/80',
          'backdrop-blur-xl',
          'border-border',
        );
      }
    };

    window.addEventListener('scroll', handleScroll);
    handleScroll(); // Run on load

    // Mobile menu toggle
    if (toggleButton && mobileNav) {
      toggleButton.addEventListener('click', () => {
        const isOpen = !mobileNav.classList.contains('translate-x-full');

        if (isOpen) {
          // Close menu
          toggleButton.classList.remove('change');
          toggleButton.setAttribute('aria-expanded', 'false');
          mobileNav.classList.add('translate-x-full');
          document.body.style.overflow = '';
        } else {
          // Open menu
          toggleButton.classList.add('change');
          toggleButton.setAttribute('aria-expanded', 'true');
          mobileNav.classList.remove('translate-x-full');
          document.body.style.overflow = 'hidden';
        }
      });

      // Close menu when clicking a link
      mobileLinks.forEach((link) => {
        link.addEventListener('click', () => {
          toggleButton.classList.remove('change');
          toggleButton.setAttribute('aria-expanded', 'false');
          mobileNav.classList.add('translate-x-full');
          document.body.style.overflow = '';
        });
      });
    }

    // Close bookmarks panel on escape key
    document.addEventListener('keydown', (e) => {
      if (
        e.key === 'Escape' &&
        !bookmarksPanel?.classList.contains('translate-x-full')
      ) {
        closeBookmarksPanel();
      }
    });
  });
</script>

<style>
  .nav-mobile-link {
    opacity: 0;
    transform: translateX(20px);
    animation: slideIn 0.3s ease-out forwards;
    animation-delay: var(--delay);
  }

  #navbar-collapse:not(.translate-x-full) .nav-mobile-link {
    opacity: 1;
    transform: translateX(0);
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Bookmarks panel */
  #bookmarks-panel {
    display: flex;
    flex-direction: column;
    border-left: 1px solid var(--color-border);
  }

  #bookmarks-list {
    flex: 1;
    overflow-y: auto;
  }

  .bookmark-item a {
    text-decoration: none;
  }
</style>
