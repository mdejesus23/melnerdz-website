---
import { Image } from 'astro:assets';
import profilePicture from '../images/mdj.png';
---

<section
  class="relative flex min-h-[90vh] w-full items-center py-12 md:py-24 lg:py-28"
>
  <div
    class="grid w-full grid-cols-1 items-center gap-10 md:grid-cols-2 md:gap-12 lg:gap-16 xl:gap-20"
  >
    <!-- Text Content -->
    <article class="order-2 space-y-6 md:order-1 md:space-y-8">
      <!-- Greeting badge -->
      <div
        class="border-accent/20 bg-accent/5 inline-flex animate-fade-in-up items-center gap-2.5 rounded-full border px-4 py-2 opacity-0 backdrop-blur-sm"
      >
        <span class="relative flex h-2.5 w-2.5">
          <span
            class="absolute inline-flex h-full w-full animate-ping rounded-full bg-accent opacity-75"
          ></span>
          <span class="relative inline-flex h-2.5 w-2.5 rounded-full bg-accent"
          ></span>
        </span>
        <span class="text-sm font-medium text-accent-foreground"
          >Available for opportunities</span
        >
      </div>

      <!-- Main heading -->
      <h1
        class="animate-fade-in-up font-headfont text-4xl font-bold leading-[1.1] tracking-tight opacity-0 delay-100 sm:text-5xl lg:text-6xl xl:text-7xl"
      >
        Hi, I'm <span class="gradient-text">Melnard</span>
        <span
          class="ml-1 inline-block origin-[70%_70%] animate-[wave_2.5s_ease-in-out_infinite] sm:ml-2"
          >ðŸ‘‹</span
        >
      </h1>

      <!-- Description -->
      <p
        class="max-w-xl animate-fade-in-up text-base leading-relaxed text-text-muted opacity-0 delay-200 sm:text-lg md:text-xl"
      >
        Full-Stack Web Developer crafting <span class="font-medium text-white"
          >clean code</span
        >,
        <span class="font-medium text-white">fast UIs</span>, and
        <span class="font-medium text-white">scalable solutions</span> that make
        a difference.
      </p>

      <!-- CTA Buttons -->
      <div
        class="flex animate-fade-in-up flex-wrap gap-3 opacity-0 delay-300 sm:gap-4"
      >
        <a
          href="/mdj-oct-2025.pdf"
          target="_blank"
          class="group relative inline-flex items-center gap-2 overflow-hidden rounded-full bg-accent px-5 py-2.5 font-medium text-bg-primary transition-all duration-300 hover:shadow-glow sm:px-6 sm:py-3"
        >
          <span class="relative z-10">Download CV</span>
          <svg
            class="relative z-10 h-4 w-4 transition-transform duration-300 group-hover:translate-y-0.5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
            ></path>
          </svg>
          <div
            class="absolute inset-0 -translate-x-full bg-accent-light transition-transform duration-300 group-hover:translate-x-0"
          >
          </div>
        </a>

        <a
          href="/projects"
          class="bg-bg-secondary/50 hover:border-accent/50 group inline-flex items-center gap-2 rounded-full border border-border px-5 py-2.5 font-medium backdrop-blur-sm transition-all duration-300 hover:bg-bg-secondary sm:px-6 sm:py-3"
        >
          <span>View Projects</span>
          <svg
            class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <!-- Tech stack pills -->
      <div class="delay-400 animate-fade-in-up pt-4 opacity-0">
        <p
          class="mb-3 text-xs font-medium uppercase tracking-wider text-text-muted"
        >
          Tech Stack
        </p>
        <div class="flex flex-wrap gap-2">
          {
            [
              'TypeScript',
              'Astro',
              'React',
              'Next.js',
              'Node.js',
              'Express.js',
              'Nest.js',
              'Python',
              'Flask',
              'PostgreSQL',
              'MongoDB',
              'Supabase',
              'OpenAI',
              'Stripe',
            ].map((tech, i) => (
              <span
                class="border-border/50 bg-bg-secondary/40 hover:border-accent/40 hover:bg-accent/10 rounded-full border px-3 py-1.5 text-xs font-medium text-text-muted backdrop-blur-sm transition-all duration-200 hover:text-white"
                style={`animation-delay: ${400 + i * 40}ms`}
              >
                {tech}
              </span>
            ))
          }
        </div>
      </div>
    </article>

    <!-- Profile Picture -->
    <div
      class="order-1 flex animate-slide-in-right justify-center opacity-0 delay-200 md:order-2 md:justify-end"
    >
      <div class="relative">
        <!-- Outer decorative ring -->
        <div
          class="border-accent/10 absolute -inset-6 rounded-full border md:-inset-8"
        >
        </div>

        <!-- Inner decorative ring with glow -->
        <div
          class="border-accent/20 absolute -inset-3 animate-pulse-glow rounded-full border md:-inset-4"
        >
        </div>

        <!-- Floating decorative elements -->
        <div
          class="bg-accent/60 absolute -left-6 top-8 h-3 w-3 animate-float rounded-full md:-left-10 md:top-12 md:h-4 md:w-4"
          style="animation-delay: 0s;"
        >
        </div>
        <div
          class="bg-accent/40 absolute -right-4 bottom-16 h-2.5 w-2.5 animate-float rounded-full md:-right-8 md:bottom-24 md:h-3 md:w-3"
          style="animation-delay: 1s;"
        >
        </div>
        <div
          class="bg-accent/30 absolute -bottom-2 left-8 h-3.5 w-3.5 animate-float rounded-full md:-bottom-4 md:left-12 md:h-5 md:w-5"
          style="animation-delay: 2s;"
        >
        </div>

        <!-- Profile image container -->
        <figure
          class="border-accent/30 relative h-56 w-56 overflow-hidden rounded-full border-2 bg-bg-secondary shadow-glow sm:h-64 sm:w-64 md:h-72 md:w-72 lg:h-80 lg:w-80"
        >
          <Image
            src={profilePicture}
            alt="Melnard De Jesus - Full Stack Developer"
            class="h-full w-full object-cover"
            widths={[224, 256, 288, 320, 640]}
            sizes="(min-width: 1024px) 320px, (min-width: 768px) 288px, (min-width: 640px) 256px, 224px"
            loading="eager"
            fetchpriority="high"
          />
          <!-- Subtle gradient overlay -->
          <div
            class="from-bg-primary/30 absolute inset-0 rounded-full bg-gradient-to-t via-transparent to-transparent"
          >
          </div>
        </figure>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="delay-600 absolute bottom-6 left-1/2 -translate-x-1/2 animate-fade-in opacity-0 md:bottom-10"
  >
    <a
      href="#projects"
      class="group flex flex-col items-center gap-2 text-text-muted transition-colors hover:text-accent"
    >
      <span class="text-[10px] font-medium uppercase tracking-[0.2em]"
        >Scroll</span
      >
      <div
        class="border-border/50 flex h-8 w-5 items-start justify-center rounded-full border p-1"
      >
        <div
          class="h-2 w-1 animate-bounce rounded-full bg-text-muted transition-colors group-hover:bg-accent"
        >
        </div>
      </div>
    </a>
  </div>
</section>

<style>
  @keyframes wave {
    0%,
    100% {
      transform: rotate(0deg);
    }
    10%,
    30% {
      transform: rotate(14deg);
    }
    20% {
      transform: rotate(-8deg);
    }
    40% {
      transform: rotate(-4deg);
    }
    50%,
    100% {
      transform: rotate(0deg);
    }
  }
</style>
