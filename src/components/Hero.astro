---
import { Image } from 'astro:assets';
import profilePicture from '../images/mdj.png';
---

<section class="relative flex min-h-[85vh] w-full items-center py-10 md:py-20">
  <div
    class="grid w-full grid-cols-1 items-center gap-12 md:grid-cols-2 md:gap-16 lg:gap-20"
  >
    <!-- Text Content -->
    <article class="order-2 md:order-1">
      <!-- Greeting badge -->
      <div
        class="bg-bg-secondary/50 mb-6 inline-flex animate-fade-in-up items-center gap-2 rounded-full border border-border px-4 py-2 opacity-0"
      >
        <span class="relative flex h-2 w-2">
          <span
            class="absolute inline-flex h-full w-full animate-ping rounded-full bg-accent opacity-75"
          ></span>
          <span class="relative inline-flex h-2 w-2 rounded-full bg-accent"
          ></span>
        </span>
        <span class="text-sm text-text-muted">Available for opportunities</span>
      </div>

      <!-- Main heading -->
      <h1
        class="mb-6 animate-fade-in-up font-headfont text-4xl font-bold leading-tight opacity-0 delay-100 md:text-5xl lg:text-6xl"
      >
        Hi, I'm <span class="gradient-text">Melnard</span>
        <span
          class="ml-2 inline-block origin-[70%_70%] animate-[wave_2.5s_ease-in-out_infinite]"
          >ðŸ‘‹</span
        >
      </h1>

      <!-- Description -->
      <p
        class="mb-8 max-w-lg animate-fade-in-up text-lg leading-relaxed text-text-muted opacity-0 delay-200 md:text-xl"
      >
        Full-Stack Web Developer crafting <span class="text-white"
          >clean code</span
        >,
        <span class="text-white">fast UIs</span>, and
        <span class="text-white">scalable solutions</span> that make a difference.
      </p>

      <!-- CTA Buttons -->
      <div class="flex animate-fade-in-up flex-wrap gap-4 opacity-0 delay-300">
        <a
          href="/mdj-oct-2025.pdf"
          target="_blank"
          class="group relative inline-flex items-center gap-2 overflow-hidden rounded-full bg-accent px-6 py-3 font-medium text-bg-primary transition-all duration-300 hover:shadow-glow"
        >
          <span class="relative z-10">Download CV</span>
          <svg
            class="relative z-10 h-4 w-4 transition-transform duration-300 group-hover:translate-x-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            ></path>
          </svg>
          <div
            class="absolute inset-0 -translate-x-full bg-accent-light transition-transform duration-300 group-hover:translate-x-0"
          >
          </div>
        </a>

        <a
          href="/projects"
          class="bg-bg-secondary/50 hover:border-accent/50 group inline-flex items-center gap-2 rounded-full border border-border px-6 py-3 font-medium transition-all duration-300 hover:bg-bg-secondary"
        >
          <span>View Projects</span>
          <svg
            class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <!-- Tech stack pills -->
      <div class="delay-400 mt-10 animate-fade-in-up opacity-0">
        <p class="mb-3 text-sm text-text-muted">Tech I work with</p>
        <div class="flex flex-wrap gap-2">
          {
            [
              'TypeScript',
              'Astro',
              'React',
              'Next.js',
              'Node.js',
              'Express.js',
              'Nest.js',
              'Python',
              'Flask',
              'PostgreSQL',
              'MongoDB',
              'Supabase',
              'OpenAI',
              'Stripe',
            ].map((tech, i) => (
              <span
                class="bg-bg-secondary/30 hover:border-accent/50 rounded-full border border-border px-3 py-1 text-sm text-text-muted transition-colors hover:text-white"
                style={`animation-delay: ${400 + i * 50}ms`}
              >
                {tech}
              </span>
            ))
          }
        </div>
      </div>
    </article>

    <!-- Profile Picture -->
    <div
      class="order-1 flex animate-slide-in-right justify-center opacity-0 delay-200 md:order-2 md:justify-end"
    >
      <div class="relative">
        <!-- Decorative ring -->
        <div
          class="border-accent/20 absolute -inset-4 animate-pulse-glow rounded-full border"
        >
        </div>

        <!-- Floating decorative elements -->
        <div
          class="bg-accent/60 absolute -left-8 top-10 h-3 w-3 animate-float rounded-full"
          style="animation-delay: 0s;"
        >
        </div>
        <div
          class="bg-accent/40 absolute -right-6 bottom-20 h-2 w-2 animate-float rounded-full"
          style="animation-delay: 1s;"
        >
        </div>
        <div
          class="bg-accent/30 absolute -bottom-4 left-10 h-4 w-4 animate-float rounded-full"
          style="animation-delay: 2s;"
        >
        </div>

        <!-- Profile image container -->
        <figure
          class="border-accent/30 relative h-52 w-52 overflow-hidden rounded-full border-2 bg-bg-secondary shadow-glow md:h-72 md:w-72 lg:h-80 lg:w-80"
        >
          <Image
            src={profilePicture}
            alt="Melnard De Jesus - Full Stack Developer"
            class="h-full w-full object-cover"
          />
          <!-- Subtle gradient overlay -->
          <div
            class="from-bg-primary/20 absolute inset-0 rounded-full bg-gradient-to-t to-transparent"
          >
          </div>
        </figure>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="delay-600 absolute bottom-8 left-1/2 -translate-x-1/2 animate-fade-in opacity-0"
  >
    <a
      href="#projects"
      class="flex flex-col items-center gap-2 text-text-muted transition-colors hover:text-accent"
    >
      <span class="text-xs uppercase tracking-widest">Scroll</span>
      <svg
        class="h-5 w-5 animate-bounce"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<style>
  @keyframes wave {
    0%,
    100% {
      transform: rotate(0deg);
    }
    10%,
    30% {
      transform: rotate(14deg);
    }
    20% {
      transform: rotate(-8deg);
    }
    40% {
      transform: rotate(-4deg);
    }
    50%,
    100% {
      transform: rotate(0deg);
    }
  }
</style>
