---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import turncateString from '../utils/turncateString';

// Fetch projects data
const allProjects: CollectionEntry<'projects'>[] = await getCollection('projects');
const featuredProjects = allProjects.filter((project) => project.data.featured);
---

<section id="projects" class="scroll-mt-24 py-16 md:py-24">
  <!-- Section header -->
  <div class="mb-10 flex flex-col justify-between gap-4 md:mb-14 md:flex-row md:items-end">
    <div>
      <span class="mb-3 inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.15em] text-accent-foreground">
        <span class="h-px w-8 bg-accent/50"></span>
        Portfolio
      </span>
      <h2 class="font-headfont text-3xl font-bold leading-tight md:text-4xl lg:text-5xl">
        Featured <span class="gradient-text">Projects</span>
      </h2>
    </div>
    <a
      class="group inline-flex items-center gap-2 rounded-full border border-border/50 bg-bg-secondary/30 px-4 py-2 text-sm font-medium text-text-muted backdrop-blur-sm transition-all duration-300 hover:border-accent/30 hover:text-accent"
      href="/projects"
    >
      View all projects
      <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>

  <!-- Projects grid -->
  <div class="flex flex-col gap-6 md:gap-8">
    {
      featuredProjects.map((project, index) => (
        <article
          class="group relative overflow-hidden rounded-2xl border border-border/50 bg-bg-card/50 backdrop-blur-sm transition-all duration-500 hover:border-accent/30 hover:shadow-lg hover:shadow-accent/5 md:rounded-3xl"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="grid items-stretch md:grid-cols-[300px_1fr] lg:grid-cols-[360px_1fr]">
            <!-- Project image -->
            <a
              href={`/projects/${project.id}`}
              class="relative block aspect-video overflow-hidden md:aspect-[4/3] lg:aspect-auto lg:h-full"
            >
              <Image
                class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
                width={450}
                height={340}
                src={project.data.images[0].src}
                alt={project.data.images[0].alt}
              />
              <!-- Gradient overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-bg-primary/80 via-bg-primary/20 to-transparent md:bg-gradient-to-r md:from-transparent md:via-transparent md:to-bg-primary/30"></div>

              <!-- View project overlay -->
              <div class="absolute inset-0 flex items-center justify-center bg-bg-primary/70 opacity-0 backdrop-blur-sm transition-all duration-300 group-hover:opacity-100">
                <span class="flex translate-y-4 items-center gap-2 rounded-full bg-accent px-5 py-2.5 text-sm font-semibold text-bg-primary shadow-lg transition-transform duration-300 group-hover:translate-y-0">
                  View Project
                  <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </div>

              <!-- Project number badge -->
              <div class="absolute left-4 top-4 flex h-8 w-8 items-center justify-center rounded-full border border-white/20 bg-bg-primary/60 text-xs font-bold text-white backdrop-blur-sm">
                {String(index + 1).padStart(2, '0')}
              </div>
            </a>

            <!-- Project details -->
            <div class="flex flex-col justify-center p-6 md:p-8 lg:p-10">
              <a href={`/projects/${project.id}`} class="group/title">
                <h3 class="mb-3 font-headfont text-xl font-bold leading-tight text-white transition-colors group-hover:text-accent md:text-2xl lg:text-3xl">
                  {project.data.title}
                </h3>
              </a>

              <p class="mb-6 text-sm leading-relaxed text-text-muted line-clamp-2 md:text-base md:line-clamp-3">
                {project.data.description || turncateString(project.data.shortDesc, 200)}
              </p>

              {/* Tech stack */}
              {project.data.technology && project.data.technology.length > 0 && (
                <div class="flex flex-wrap gap-2">
                  {project.data.technology.slice(0, 5).map((tech: string) => (
                    <span class="rounded-full border border-accent/20 bg-accent/10 px-3 py-1.5 text-xs font-medium text-accent/90 transition-all duration-200 group-hover:border-accent/40 group-hover:bg-accent/15 group-hover:text-accent">
                      {tech}
                    </span>
                  ))}
                  {project.data.technology.length > 5 && (
                    <span class="rounded-full border border-border/50 bg-bg-secondary/50 px-3 py-1.5 text-xs font-medium text-text-muted">
                      +{project.data.technology.length - 5} more
                    </span>
                  )}
                </div>
              )}

              {/* Action link */}
              <div class="mt-6 inline-flex">
                <a
                  href={`/projects/${project.id}`}
                  class="group/link inline-flex items-center gap-2 text-sm font-medium text-text-muted transition-colors hover:text-accent"
                  aria-label={`View ${project.data.title} project details`}
                >
                  <span class="relative">
                    View project
                    <span class="absolute -bottom-0.5 left-0 h-px w-0 bg-accent transition-all duration-300 group-hover/link:w-full"></span>
                  </span>
                  <svg class="h-4 w-4 transition-transform group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
