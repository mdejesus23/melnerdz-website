---
import MainLayout from '../layouts/MainLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import { SITE, ISPARTOF } from '../data/constant';

const title: string = `Contact | ${SITE.title}`;
const description: string =
  'Get in touch with me for any inquiries, collaborations, or job opportunities.';
---

<MainLayout
  title={title}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    '@id': 'https://melnerdz.com/contact',
    url: 'https://melnerdz.com/contact',
    name: 'Contact | Melnerdz',
    description: description,
    isPartOf: ISPARTOF,
    inLanguage: 'en-US',
  }}
  meta={description}
>
  <section class="py-10 md:py-20">
    <!-- Header -->
    <div class="mx-auto mb-16 max-w-2xl text-center">
      <span
        class="mb-4 inline-block text-sm font-medium uppercase tracking-widest text-accent"
      >
        Get in Touch
      </span>
      <h1 class="mb-6 font-headfont text-3xl font-bold md:text-5xl">
        Let's <span class="gradient-text">Connect</span>
      </h1>
      <p class="text-lg leading-relaxed text-text-muted">
        Have a project in mind or want to discuss opportunities? I'd love to
        hear from you. Fill out the form below, and I'll get back to you as soon
        as possible.
      </p>
    </div>

    <div class="grid gap-12 lg:grid-cols-5">
      <!-- Contact Info -->
      <div class="lg:col-span-2">
        <div class="glass-card rounded-2xl p-6 md:p-8">
          <h2 class="mb-6 font-headfont text-xl font-bold">
            Contact Information
          </h2>

          <div class="space-y-6">
            <!-- Email -->
            <div class="group flex items-start gap-4">
              <div
                class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-accent-muted text-accent transition-colors group-hover:bg-accent group-hover:text-bg-primary"
              >
                <svg
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="mb-1 text-sm font-medium text-text-muted">Email</p>
                <a
                  href="mailto:me@melnerdz.com"
                  class="text-white transition-colors hover:text-accent"
                  >me@melnerdz.com</a
                >
              </div>
            </div>

            <!-- Phone -->
            <div class="group flex items-start gap-4">
              <div
                class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-accent-muted text-accent transition-colors group-hover:bg-accent group-hover:text-bg-primary"
              >
                <svg
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="mb-1 text-sm font-medium text-text-muted">Phone</p>
                <p class="text-white">+63 977 639 3459</p>
              </div>
            </div>

            <!-- Location -->
            <div class="group flex items-start gap-4">
              <div
                class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-accent-muted text-accent transition-colors group-hover:bg-accent group-hover:text-bg-primary"
              >
                <svg
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="mb-1 text-sm font-medium text-text-muted">Location</p>
                <p class="text-white">Philippines (GMT+8)</p>
              </div>
            </div>

            <!-- Availability -->
            <div class="group flex items-start gap-4">
              <div
                class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-xl bg-accent-muted text-accent transition-colors group-hover:bg-accent group-hover:text-bg-primary"
              >
                <svg
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <p class="mb-1 text-sm font-medium text-text-muted">
                  Availability
                </p>
                <p class="text-white">
                  Open to freelance & remote opportunities
                </p>
              </div>
            </div>
          </div>

          <!-- Social links -->
          <div class="mt-8 border-t border-border pt-6">
            <p class="mb-4 text-sm font-medium text-text-muted">
              Connect on Social
            </p>
            <div class="flex gap-3">
              <a
                href="https://github.com/mdejesus23"
                target="_blank"
                rel="noopener noreferrer"
                class="bg-bg-secondary/50 hover:border-accent/50 flex h-10 w-10 items-center justify-center rounded-full border border-border text-text-muted transition-all duration-300 hover:text-accent"
                aria-label="GitHub"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                  ></path>
                </svg>
              </a>
              <a
                href="https://www.linkedin.com/in/melnard-de-jesus-279132278"
                target="_blank"
                rel="noopener noreferrer"
                class="bg-bg-secondary/50 hover:border-accent/50 flex h-10 w-10 items-center justify-center rounded-full border border-border text-text-muted transition-all duration-300 hover:text-accent"
                aria-label="LinkedIn"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-3">
        <div class="glass-card rounded-2xl p-6 md:p-8">
          <h2 class="mb-6 font-headfont text-xl font-bold">Send a Message</h2>
          <ContactForm />
        </div>
      </div>
    </div>
  </section>
</MainLayout>
