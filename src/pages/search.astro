---
import MainLayout from '../layouts/MainLayout.astro';
import { SITE, ISPARTOF } from '../data/constant';

const title: string = `Search | ${SITE.title}`;
const description: string =
  'Search page. Find articles, blog posts, or projects from the site.';
---

<MainLayout
  title={title}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    '@id': 'https://melnerdz.com/search',
    url: 'https://melnerdz.com/search',
    name: 'Search | Melnerdz website',
    description: description,
    isPartOf: ISPARTOF,
    inLanguage: 'en-US',
  }}
  meta={description}
>
  <section>
    <h1
      class="mx-auto flex items-center justify-center text-center font-headfont text-3xl font-bold md:text-4xl"
    >
      Search the Site
    </h1>

    <p class="mt-6 hidden text-center font-medium text-white md:block">
      Looking for something specific? Search through blog posts, projects, and
      more below.
    </p>
    <p class="mt-6 block text-center font-medium text-white md:hidden">
      Search blog posts, projects, and more.
    </p>

    <div class="mx-auto mt-8 max-w-xl px-4">
      <input
        type="text"
        min="2"
        max="24"
        name="search"
        id="search"
        placeholder="Type to search..."
        class="w-full rounded-md border border-projectDesc bg-pblue px-4 py-2 text-projectDesc focus:outline-none focus:ring-2 focus:ring-lblue"
      />
      <ul
        id="searchResults"
        class="mt-6 max-h-[50rem] space-y-4 overflow-y-auto"
      >
      </ul>
    </div>

    <script>
      import '@/scripts/search';
    </script>
  </section>
</MainLayout>
