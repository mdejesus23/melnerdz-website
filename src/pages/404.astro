---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Page Not Found">
  <section
    class="flex min-h-[60vh] flex-col items-center justify-center text-center"
  >
    <!-- 404 Number -->
    <div class="animate-fade-in-up opacity-0">
      <span
        class="gradient-text font-headfont text-8xl font-bold tracking-tight sm:text-9xl"
      >
        404
      </span>
    </div>

    <!-- Message -->
    <div class="mt-4 animate-fade-in-up space-y-3 opacity-0 delay-100">
      <h1 class="font-headfont text-2xl font-bold sm:text-3xl md:text-4xl">
        Page Not Found
      </h1>
      <p class="max-w-md text-text-muted">
        The page you're looking for doesn't exist or has been moved.
      </p>
    </div>

    <!-- CTA Buttons -->
    <div
      class="mt-8 flex animate-fade-in-up flex-wrap justify-center gap-3 opacity-0 delay-200 sm:gap-4"
    >
      <a
        href="/"
        class="group relative inline-flex items-center gap-2 overflow-hidden rounded-full bg-accent px-5 py-2.5 font-medium text-bg-primary transition-all duration-300 hover:shadow-glow sm:px-6 sm:py-3"
      >
        <svg
          class="relative z-10 h-4 w-4 transition-transform duration-300 group-hover:-translate-x-0.5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
          ></path>
        </svg>
        <span class="relative z-10">Back to Home</span>
        <div
          class="absolute inset-0 -translate-x-full bg-accent-light transition-transform duration-300 group-hover:translate-x-0"
        >
        </div>
      </a>

      <a
        href="/search"
        class="group inline-flex items-center gap-2 rounded-full border border-border bg-bg-secondary/50 px-5 py-2.5 font-medium backdrop-blur-sm transition-all duration-300 hover:border-accent/50 hover:bg-bg-secondary sm:px-6 sm:py-3"
      >
        <svg
          class="h-4 w-4 transition-transform duration-300 group-hover:scale-110"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <span>Search</span>
      </a>
    </div>

    <!-- Helpful Links -->
    <div class="mt-12 animate-fade-in-up opacity-0 delay-300">
      <p class="mb-3 text-xs font-medium uppercase tracking-wider text-text-muted">
        Or try these pages
      </p>
      <div class="flex flex-wrap justify-center gap-3">
        {
          [
            { name: 'Projects', href: '/projects' },
            { name: 'Blog', href: '/blog' },
            { name: 'About', href: '/about' },
            { name: 'Contact', href: '/contact' },
          ].map((link) => (
            <a
              href={link.href}
              class="rounded-full border border-border/50 bg-bg-secondary/40 px-4 py-1.5 text-sm font-medium text-text-muted backdrop-blur-sm transition-all duration-200 hover:border-accent/40 hover:bg-accent/10 hover:text-white"
            >
              {link.name}
            </a>
          ))
        }
      </div>
    </div>
  </section>
</MainLayout>
