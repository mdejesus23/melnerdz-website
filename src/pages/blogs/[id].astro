---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import type { Blog } from '../../types/dataTypes';
import { render } from 'astro:content';
import MarkdownBlogLayout from '../../layouts/MarkdownBlogLayout.astro';

export async function getStaticPaths() {
  const allBlogs: CollectionEntry<'blogs'>[] = (
    await getCollection('blogs')
  ).sort(
    (a: CollectionEntry<'blogs'>, b: CollectionEntry<'blogs'>) =>
      b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
  );

  return allBlogs.map((entry) => ({
    params: { id: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const collection = entry.collection;

const data = entry.data;
const { Content, headings } = await render(entry);
---

<MarkdownBlogLayout
  body={entry.body}
  slug={entry.id}
  data={data}
  collection={collection}
  headings={headings}
>
  <Content />
</MarkdownBlogLayout>
