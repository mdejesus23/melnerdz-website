---
import '../styles/index.css';
import MainHead from '../components/MainHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Modern fonts
import '@fontsource/playfair-display/400.css';
import '@fontsource/playfair-display/500.css';
import '@fontsource/playfair-display/600.css';
import '@fontsource/playfair-display/700.css';
import '@fontsource/dm-sans/400.css';
import '@fontsource/dm-sans/500.css';
import '@fontsource/dm-sans/600.css';
import '@fontsource/dm-sans/700.css';
import '@fontsource/outfit/400.css';
import '@fontsource/outfit/500.css';
import '@fontsource/outfit/600.css';
import '@fontsource/outfit/700.css';

interface Props {
  title?: string;
  structuredData?: object;
  meta?: string;
  liturgy?: boolean;
}

const { title, meta, structuredData, liturgy } = Astro.props;
---

<!doctype html>
<html lang="en">
  <MainHead
    liturgy={liturgy}
    title={title}
    meta={meta}
    structuredData={structuredData}
  />
  <body
    class="relative min-h-screen overflow-x-hidden bg-bg-primary font-bodyfont text-white"
  >
    <!-- Background effects -->
    <div class="fixed inset-0 -z-10">
      <!-- Gradient spotlight from top -->
      <div class="spotlight absolute inset-0"></div>

      <!-- Grid pattern -->
      <div class="grid-pattern absolute inset-0"></div>

      <!-- Ambient glow orbs -->
      <div
        class="bg-accent/5 absolute -left-40 top-20 h-80 w-80 rounded-full blur-[120px]"
      >
      </div>
      <div
        class="bg-accent/5 absolute -right-40 top-1/2 h-96 w-96 rounded-full blur-[150px]"
      >
      </div>
      <div
        class="bg-accent/3 absolute -bottom-40 left-1/3 h-72 w-72 rounded-full blur-[100px]"
      >
      </div>

      <!-- Noise overlay -->
      <div class="noise-overlay absolute inset-0"></div>
    </div>

    <!-- {!liturgy && <Header />} -->
    <Header />

    <main
      class="relative mx-auto my-10 min-h-screen max-w-6xl px-6 pt-10 md:my-16 lg:px-8 xl:px-0"
    >
      <slot />
    </main>

    <Footer />
  </body>
</html>
